<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/photo_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/photo_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/photo_mask"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/photo_cb"
        android:layout_width="@dimen/photo_item_check_btn_size"
        android:layout_height="@dimen/photo_item_check_btn_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:padding="@dimen/photo_item_check_btn_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_unchecked" />

</RelativeLayout>